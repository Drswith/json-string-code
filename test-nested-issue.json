{
  "name": "test-project",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run compile && npm run bundle",
    "test": "jest --coverage --watchAll=false",
    "start": "node dist/index.js"
  },
  "webpack_config": {
    "entry": "./src/index.js",
    "output": {
      "path": "path.resolve(__dirname, 'dist')",
      "filename": "bundle.js"
    },
    "rules": [
      {
        "test": "/\\.js$/",
        "use": "babel-loader",
        "exclude": "/node_modules/"
      }
    ]
  }
}
