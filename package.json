{
  "publisher": "drswith",
  "name": "vscode-json-string-code-editor",
  "displayName": "JSON String Code Editor",
  "version": "0.2.5",
  "packageManager": "pnpm@9.15.9",
  "description": "Enhanced JSON schema code snippet editing experience with temporary code editor tabs",
  "author": "Drswith",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Drswith",
  "homepage": "https://github.com/Drswith/vscode-json-string-code-editor#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Drswith/vscode-json-string-code-editor"
  },
  "bugs": {
    "url": "https://github.com/Drswith/vscode-json-string-code-editor/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/Drswith"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "icon": "res/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscode-json-string-code-editor.editCode",
        "title": "Edit Code in Temporary Editor",
        "category": "JSON String Code Editor"
      },
      {
        "command": "vscode-json-string-code-editor.editCodeAtRange",
        "title": "Edit Code at Range",
        "category": "JSON String Code Editor"
      },
      {
        "command": "vscode-json-string-code-editor.cleanupTempFiles",
        "title": "Clean Up Temporary Files",
        "category": "JSON String Code Editor"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-json-string-code-editor.editCode",
          "when": "editorLangId == json || editorLangId == jsonc",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "JSON String Code Editor",
      "properties": {
        "vscode-json-string-code-editor.include": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.json",
            "**/*.jsonc"
          ],
          "description": "Glob patterns for files where the extension should be active"
        },
        "vscode-json-string-code-editor.autoDetectFields": {
          "type": "array",
          "default": [
            "adaptor",
            "script",
            "code",
            "expression"
          ],
          "description": "Field names that should be automatically detected as containing code"
        },
        "vscode-json-string-code-editor.enableAutoDetection": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect code in JSON strings"
        },
        "vscode-json-string-code-editor.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Set the logging level for the extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsup --sourcemap --clean",
    "build": "tsup --minify --clean",
    "watch": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest run",
    "test:coverage": "vitest run --coverage",
    "ext:pack": "vsce package --no-dependencies"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "@types/node": "22.x",
    "@types/vscode": "^1.74.0",
    "@vitest/ui": "^3.2.4",
    "@vscode/vsce": "^3.2.2",
    "eslint": "9.29.0",
    "eslint-plugin-format": "1.0.1",
    "jsdom": "^26.1.0",
    "pnpm": "9.15.9",
    "tsup": "^8.5.0",
    "typescript": "^5.8.4",
    "vitest": "^3.2.4"
  }
}
