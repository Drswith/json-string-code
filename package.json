{
  "publisher": "drswith",
  "name": "vscode-json-string-code-editor",
  "displayName": "JSON String Code Editor",
  "version": "0.1.12",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "Enhanced JSON schema code snippet editing experience with temporary code editor tabs",
  "author": "Drswith",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Drswith",
  "homepage": "https://github.com/Drswith/vscode-json-string-code-editor#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Drswith/vscode-json-string-code-editor"
  },
  "bugs": {
    "url": "https://github.com/Drswith/vscode-json-string-code-editor/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/Drswith"
  },
  "categories": [
    "Other",
    "Formatters",
    "Snippets"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-json-string-code-editor.editAsCode",
        "title": "Edit as Code",
        "category": "JSON String Code"
      },
      {
        "command": "vscode-json-string-code-editor.editSnippetFromHover",
        "title": "Edit Code Snippet from Hover",
        "category": "JSON String Code"
      },
      {
        "command": "vscode-json-string-code-editor.copySnippetCode",
        "title": "Copy Code Snippet",
        "category": "JSON String Code"
      },
      {
        "command": "vscode-json-string-code-editor.refreshDecorations",
        "title": "Refresh Code Snippet Decorations",
        "category": "JSON String Code"
      },
      {
        "command": "vscode-json-string-code-editor.cleanupTempFiles",
        "title": "Cleanup Temporary Files",
        "category": "JSON String Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-json-string-code-editor.editAsCode",
          "when": "resourceExtname =~ /\\.(json|jsonc)$/ && editorTextFocus",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "JSON String Code Editor",
      "properties": {
        "vscode-json-string-code-editor.include": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.json",
            "**/*.jsonc"
          ],
          "description": "Glob patterns for files where the extension should be active"
        },
        "vscode-json-string-code-editor.forceCodeKeys": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "script",
            "code",
            "template",
            "function",
            "expression",
            "query"
          ],
          "description": "Array of key names that should always be treated as code snippets"
        },
        "vscode-json-string-code-editor.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable debug logging for the extension"
        },
        "vscode-json-string-code-editor.autoCloseTempTab": {
          "type": "boolean",
          "default": false,
          "description": "Automatically close temporary tab when original file is closed"
        },
        "vscode-json-string-code-editor.defaultLanguage": {
          "type": "string",
          "enum": [
            "javascript",
            "typescript",
            "python",
            "sql",
            "html",
            "css",
            "xml",
            "yaml",
            "markdown",
            "json",
            "plaintext"
          ],
          "default": "javascript",
          "description": "Default programming language for temporary edit windows when language cannot be auto-detected"
        }
      }
    }
  },
  "scripts": {
    "dev": "nr build --watch --sourcemap",
    "build": "tsup",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pack": "vsce package --no-dependencies",
    "publish:vsce": "vsce publish --no-dependencies",
    "publish:ovsx": "ovsx publish",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "bumpp": "bumpp",
    "release": "bumpp && nr build && nr publish"
  },
  "dependencies": {
    "jsesc": "^3.1.0",
    "jsonc-parser": "^3.3.1",
    "minimatch": "^10.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "@antfu/ni": "^23.3.1",
    "@swc/core": "^1.13.4",
    "@types/jsesc": "^3.0.3",
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "esno": "^4.8.0",
    "ovsx": "^0.10.5",
    "pnpm": "^10.4.1",
    "reactive-vscode": "^0.2.10",
    "tsdown": "^0.9.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "vscode-ext-gen": "^1.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
