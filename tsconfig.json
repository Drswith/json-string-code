{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "vitest/globals"
    ],
    "strict": true,
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "test",
    "out/**/*",
    "dist/**/*",
    "node_modules/**/*",
    ".vscode-test"
  ]
}
